/* pages/payment/payment.wxss */
.payment-page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 顶部导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.nav-left,
.nav-right {
  display: flex;
  align-items: center;
}

.nav-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.nav-btn:last-child {
  margin-right: 0;
}

.nav-icon {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 停车场信息 */
.parking-info {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.parking-icon {
  width: 40rpx;
  height: 80rpx;
  color: #ff4757;

  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.parking-details {
  flex: 1;
}

.parking-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.parking-address {
  font-size: 28rpx;
  color: #666;
}

/* 车辆信息卡片 */
.vehicle-card {
  background-color: #fff;
  margin: 0 30rpx 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20rpx;
}

.switch-vehicle {
  display: flex;
  align-items: center;
  color: #666;
  font-size: 28rpx;
}

.switch-icon {
  font-size: 24rpx;
  margin-left: 8rpx;
  color: #666;
}

.vehicle-info {
  margin-bottom: 30rpx; /* 增加底部间距 */
}

.info-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 25rpx; /* 增加上下间距 */
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 400;
}

.plate-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: flex-end; /* 右对齐 */
  gap: 8rpx; /* 字符间距 */
  letter-spacing: 4rpx; /* 增加字符间距 */
}

.info-value {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.divider {
  height: 1rpx;
  background: linear-gradient(to right, transparent, #ddd, transparent);
  margin: 30rpx 0; /* 增加分隔线上下间距 */
}

.parking-details-info {
  display: flex;
  flex-direction: column;
  gap: 25rpx; /* 增加上下间距 */
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx; /* 增加每个项目的间距 */
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 400;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
}

/* 费用信息卡片 */
.fee-card {
  background-color: #fff;
  margin: 30rpx 30rpx 20rpx; /* 增加顶部间距 */
  border-radius: 20rpx; /* 增加圆角 */
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08); /* 优化阴影 */
  border: 1rpx solid rgba(0, 0, 0, 0.04); /* 添加细微边框 */
}

.fee-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.fee-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 400;
}

.fee-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4757;
}

/* 支付倒计时 */
.countdown {
  text-align: center;
  font-size: 28rpx;
  color: #ff4757;
  margin: 20rpx 0;
}

/* 支付按钮 */
.payment-btn-container {
  padding: 0 30rpx;
  margin-top: 40rpx;
}

.payment-btn {
  width: 100%;
  height: 88rpx;
  background-color: #ff4757;
  color: #fff;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.payment-btn::after {
  border: none;
}

.payment-btn:active {
  background-color: #ff3742;
}

/* 底部导航 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
  padding: 20rpx 0;
  z-index: 100;
}

.nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.nav-item-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
  color: #666;
}

.parking-icon-small {
  width: 48rpx;
  height: 48rpx;
  background-color: #ff4757;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.nav-item-text {
  font-size: 24rpx;
  color: #666;
}

/* ==================== 车牌输入页面样式 ==================== */

.input-plate-content {
  padding-bottom: 20rpx;
}

/* 车牌输入卡片 */
.plate-input-card {
  background-color: #fff;
  margin: 0 30rpx 20rpx;
  border-radius: 20rpx; /* 增加圆角 */
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08); /* 优化阴影 */
  border: 1rpx solid rgba(0, 0, 0, 0.04); /* 添加细微边框 */
}

.card-title {
  font-size: 48rpx;
  font-weight: 600; /* 调整字重 */
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
  letter-spacing: 1rpx; /* 添加字间距 */
}

/* 车牌输入框容器 */
.plate-input-container {
  display: flex;
  align-items: center;
  justify-content: flex-start; /* 改为左对齐 */
  margin-bottom: 30rpx;
  flex-wrap: nowrap; /* 强制不换行 */
  gap: 8rpx; /* 增加间距，更符合设计稿 */
  padding: 0 30rpx; /* 增加左右内边距 */
  overflow-x: auto; /* 如果内容超出，允许横向滚动 */
}

.plate-input-box {
  width: 70rpx; /* 增加宽度，更符合设计稿 */
  height: 80rpx; /* 增加高度，更符合设计稿 */
  border: 2rpx solid #e0e0e0; /* 更浅的边框色 */
  border-radius: 12rpx; /* 增加圆角 */
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx; /* 增加字体大小 */
  font-weight: 600; /* 调整字重 */
  color: #333;
  background-color: #fff;
  position: relative;
  transition: all 0.3s ease;
  flex-shrink: 0; /* 防止收缩 */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06); /* 添加轻微阴影 */
}

.plate-input-box.active {
  border-color: #ff4757;
  background-color: #fff5f5;
  box-shadow: 0 2rpx 12rpx rgba(255, 71, 87, 0.2); /* 激活状态阴影 */
  transform: scale(1.02); /* 轻微放大效果 */
}

.plate-input-box.new-energy {
  border-style: dashed;
  border-color: #d0d0d0;
  color: #999;
  background-color: #fafafa;
}

.plate-input-box.new-energy.enabled {
  border-color: #4caf50;
  color: #333;
  border-style: solid;
  background-color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.15); /* 新能源状态阴影 */
}

.new-energy-label {
  position: absolute;
  bottom: -20rpx; /* 调整位置 */
  left: 50%;
  transform: translateX(-50%);
  font-size: 18rpx; /* 增加字体 */
  color: #4caf50;
  white-space: nowrap;
  font-weight: 500;
  background-color: rgba(76, 175, 80, 0.1);
  padding: 2rpx 6rpx;
  border-radius: 4rpx;
}

.plate-separator {
  font-size: 24rpx; /* 增加字体 */
  color: #666; /* 调整颜色 */
  margin: 0 4rpx; /* 增加间距 */
  font-weight: 600;
  flex-shrink: 0; /* 防止收缩 */
  line-height: 1;
}

/* 底部服务链接 */
.service-links {
  background-color: #fff;
  margin: 0 30rpx 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.service-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
  color: #666;
}

.service-text {
  font-size: 24rpx;
  color: #666;
}

/* 虚拟键盘 */
.virtual-keyboard {
  background-color: #fff;
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  animation: slideUp 0.3s ease-out;
  min-height: 300rpx; /* 确保键盘有足够高度 */
}

.keyboard-row {
  margin-bottom: 10rpx;
}

.keyboard-row-inner {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 8rpx;
  padding: 0 20rpx;
}

.keyboard-key {
  width: 60rpx;
  height: 60rpx;
  background-color: #f8f8f8;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  transition: all 0.2s ease;
}

.keyboard-key:active {
  background-color: #e0e0e0;
  transform: scale(0.95);
}

.keyboard-function-row {
  display: flex;
  justify-content: center;
  gap: 8rpx;
  padding: 0 20rpx;
  margin-top: 10rpx;
}

.function-key {
  width: 120rpx;
  background-color: #4caf50;
  color: #fff;
  border-color: #4caf50;
}

.function-key:active {
  background-color: #45a049;
}

.delete-key {
  width: 80rpx;
  background-color: #f44336;
  color: #fff;
  border-color: #f44336;
}

.delete-key:active {
  background-color: #da190b;
}

.new-energy-text {
  font-size: 24rpx;
  color: #fff;
}

.delete-icon {
  font-size: 24rpx;
  color: #fff;
  font-weight: bold;
}

/* 缴费页面内容 */
.payment-content {
  padding-bottom: 120rpx;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .plate-number {
    font-size: 42rpx;
    letter-spacing: 3rpx; /* 小屏幕下调整字符间距 */
  }

  .info-label {
    font-size: 26rpx;
  }

  .info-value {
    font-size: 28rpx;
  }

  .info-item {
    margin-bottom: 20rpx; /* 小屏幕下调整间距 */
  }

  .parking-details-info {
    gap: 20rpx; /* 小屏幕下调整间距 */
  }

  .detail-item {
    margin-bottom: 20rpx; /* 小屏幕下调整间距 */
  }

  .divider {
    margin: 25rpx 0; /* 小屏幕下调整分隔线间距 */
  }

  .fee-card {
    margin: 25rpx 30rpx 20rpx; /* 小屏幕下调整顶部间距 */
  }

  .fee-label {
    font-size: 26rpx;
  }

  .fee-amount {
    font-size: 56rpx;
  }

  .plate-input-container {
    gap: 6rpx; /* 调整间距 */
    padding: 0 20rpx; /* 调整左右内边距 */
    justify-content: flex-start; /* 小屏幕也保持左对齐 */
  }

  .plate-input-box {
    width: 60rpx; /* 调整宽度 */
    height: 70rpx; /* 调整高度 */
    font-size: 28rpx; /* 调整字体 */
  }

  .plate-separator {
    font-size: 20rpx; /* 调整分隔符字体 */
    margin: 0 2rpx; /* 调整分隔符间距 */
  }

  .new-energy-label {
    font-size: 16rpx; /* 调整新能源标签字体 */
    bottom: -18rpx; /* 调整位置 */
  }

  .keyboard-key {
    width: 50rpx;
    height: 50rpx;
    font-size: 24rpx;
  }
}

/* 键盘动画效果 */
@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}
