/* pages/visitor-registration/visitor-registration.wxss */
.visitor-registration-page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 400rpx; /* 为键盘留出空间 */
}

/* 顶部导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.nav-left,
.nav-right {
  display: flex;
  align-items: center;
}

.nav-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.nav-btn:last-child {
  margin-right: 0;
}

.nav-icon {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 访客登记表单 */
.registration-form {
  background-color: #fff;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.form-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

/* 车牌输入区域 */
.plate-input-section {
  margin-bottom: 40rpx;
}

.plate-input-container {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  gap: 8rpx;
}

.plate-input-box {
  width: 60rpx;
  height: 60rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  background-color: #fff;
  position: relative;
  transition: all 0.3s ease;
}

.plate-input-box.active {
  border-color: #ff4757;
  background-color: #fff5f5;
}

.plate-input-box.new-energy {
  border-style: dashed;
  border-color: #ccc;
  color: #999;
}

.plate-input-box.new-energy.enabled {
  border-color: #4caf50;
  color: #333;
  border-style: solid;
}

.new-energy-label {
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 20rpx;
  color: #4caf50;
  white-space: nowrap;
}

.plate-separator {
  font-size: 24rpx;
  color: #333;
  margin: 0 4rpx;
  font-weight: bold;
}

/* 日期选择区域 */
.date-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
  padding: 20rpx 0;
  border-top: 1rpx solid #eee;
}

.date-label {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.date-picker {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  border: 1rpx solid #ddd;
}

.date-value {
  font-size: 28rpx;
  color: #333;
  margin-right: 10rpx;
}

.date-arrow {
  font-size: 20rpx;
  color: #666;
}

/* 确认登记按钮 */
.confirm-btn {
  width: 100%;
  height: 88rpx;
  background-color: #ff4757;
  color: #fff;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.confirm-btn::after {
  border: none;
}

.confirm-btn:active {
  background-color: #ff3742;
}

/* 停车信息展示 */
.parking-info {
  background-color: #fff;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.info-left {
  flex: 1;
}

.plate-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4757;
  margin-bottom: 10rpx;
}

.parking-duration {
  font-size: 28rpx;
  color: #666;
}

.info-right {
  text-align: right;
}

.visit-date {
  font-size: 28rpx;
  color: #666;
}

/* 虚拟键盘 */
.virtual-keyboard {
  background-color: #fff;
  border-top: 1rpx solid #eee;
  padding: 0;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 9999;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  min-height: 300rpx; /* 确保键盘有足够高度 */
}

/* 键盘头部 */
.keyboard-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  background-color: #f8f8f8;
}

.keyboard-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.keyboard-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f0f0f0;
  border-radius: 50%;
}

.close-icon {
  font-size: 24rpx;
  color: #666;
  font-weight: bold;
}

.keyboard-content {
  padding: 20rpx 0;
}

.keyboard-row {
  margin-bottom: 10rpx;
}

.keyboard-row-inner {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 8rpx;
  padding: 0 20rpx;
}

.keyboard-key {
  width: 60rpx;
  height: 60rpx;
  background-color: #f8f8f8;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  transition: all 0.2s ease;
}

.keyboard-key:active {
  background-color: #e0e0e0;
  transform: scale(0.95);
}

.keyboard-function-row {
  display: flex;
  justify-content: center;
  gap: 8rpx;
  padding: 0 20rpx;
  margin-top: 10rpx;
}

.function-key {
  width: 120rpx;
  background-color: #4caf50;
  color: #fff;
  border-color: #4caf50;
}

.function-key:active {
  background-color: #45a049;
}

.delete-key {
  width: 80rpx;
  background-color: #f44336;
  color: #fff;
  border-color: #f44336;
}

.delete-key:active {
  background-color: #da190b;
}

.new-energy-text {
  font-size: 24rpx;
  color: #fff;
}

.delete-icon {
  font-size: 24rpx;
  color: #fff;
  font-weight: bold;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .plate-input-box {
    width: 50rpx;
    height: 50rpx;
    font-size: 24rpx;
  }

  .keyboard-key {
    width: 50rpx;
    height: 50rpx;
    font-size: 24rpx;
  }

  .form-title {
    font-size: 42rpx;
  }
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.registration-form {
  animation: fadeIn 0.3s ease-out;
}

.parking-info {
  animation: fadeIn 0.3s ease-out 0.1s both;
}
